/* db + manager/children helper */
$pdo = db();
function has_children($uid, $pdo){
  static $cache = [];
  if (isset($cache[$uid])) return $cache[$uid];
  $st=$pdo->prepare("SELECT COUNT(*) FROM users WHERE manager_id=?");
  $st->execute([$uid]);
  return $cache[$uid] = ($st->fetchColumn() > 0);
}

